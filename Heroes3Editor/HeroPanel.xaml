<UserControl x:Class="Heroes3Editor.HeroPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Heroes3Editor.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:Constants x:Key="constants"/>
    </UserControl.Resources>
    <StackPanel>
        <GroupBox Header="Skills">
            <Grid DataContext="{Binding Source={StaticResource constants}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <ComboBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Path=Skills.Names}" />
                <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Path=Skills.Names}" />
                <ComboBox Grid.Row="0" Grid.Column="2" />
                <ComboBox Grid.Row="0" Grid.Column="3" />
                <ComboBox Grid.Row="1" Grid.Column="0" />
                <ComboBox Grid.Row="1" Grid.Column="1" />
                <ComboBox Grid.Row="1" Grid.Column="2" />
                <ComboBox Grid.Row="1" Grid.Column="3" />
            </Grid>
        </GroupBox>
    </StackPanel>
</UserControl>
